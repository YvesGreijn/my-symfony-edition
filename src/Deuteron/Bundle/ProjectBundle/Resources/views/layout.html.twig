<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width">

        <title>{% block title %}Welcome{% endblock %}</title>

        <meta name="author" content="Maxime AILLOUD">
        <meta name="description" content="Symfony Edition by maxime AILLOUD">

        <link rel="stylesheet" href="{{ asset('bundles/deuteronproject/css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/deuteronproject/css/bootstrap-responsive.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/deuteronproject/css/style.css') }}" />
        {% block stylesheets %}{% endblock %}

        <!-- Le fav and touch icons -->
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body class="container">

        <header id="mainMenu" class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>

                    <a class="brand" href="{{ path('index') }}" title="Retour Ã  l'accueil">{{ app_name }}</a>

                    <div class="nav-collapse">
                        {{ knp_menu_render('main', {'currentClass': 'active'}) }}
                        <ul class="nav pull-right">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li><a href="{{ path('fos_user_profile_show') }}" title="Voir son profil">{{ app.user.username }}</a></li>
                            <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
                        {% else %}
                            <li><a href="{{ path('fos_user_security_login') }}" title="Se connecter">Connexion</a></li>
                        {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        <section class="container">
            {% block content %}
            {% block fos_user_content %}{% endblock %}
            {% endblock %}
        </section>

        <script src="http://code.jquery.com/jquery-1.7.2.min.js"></script>
        <script src="{{ asset('bundles/deuteronproject/js/bootstrap.min.js') }}"></script>
        {% block javascripts %}{% endblock %}

    </body>
</html>