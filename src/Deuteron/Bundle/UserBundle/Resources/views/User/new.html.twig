{% extends 'DeuteronUserBundle::layout.html.twig' %}

{% block title %}{{ app_name }} - Administration - Modification d'un utilisateur{% endblock %}

{% block content %}
<div class="page-header">
  <h1>Ajout d'un utlisateur</h1>
</div>

<form action="{{ path('user_new') }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}

    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password) }}

    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
                {{ form_widget(form.super_admin) }}
                {{ form_label(form.super_admin) }}
            </label>
        </div>
    </div>

    {{ form_rest(form) }}

    <div>
        <button type="submit" name="valid" class="btn btn-primary">Ajouter</button>
        <a href="{{ path('user_list') }}" class="btn" title="Annuler">Annuler</a>
    </div>
</form>
{% endblock %}
