{% extends 'DeuteronUserBundle::layout.html.twig' %}

{% block title %}Deuteron - Administration - Modification d'un utilisateur{% endblock %}

{% block content %}
<div class="page-header">
  <h1>Modification d'un utlisateur</h1>
</div>

<form id="form" action="{{ path('user_edit', { 'id': user.id}) }}" method="post" {{ form_enctype(form) }}>

  {{ form_errors(form) }}

  {{ form_row(form.username) }}

  {{ form_rest(form) }}

  <div class="actions">
    <input type="submit" name="valid" class="btn primary" value="Modifer"/>
    <a href="{{ path('user_list') }}" class="btn" title="Annuler">Annuler</a>
  </div>
</form>
{% endblock %}

