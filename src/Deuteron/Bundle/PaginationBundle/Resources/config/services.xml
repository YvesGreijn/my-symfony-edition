<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="pagination.twig.extension.class">Deuteron\Bundle\PaginationBundle\Twig\Extension\PaginationExtension</parameter>
        <parameter key="pagination.twig.extension.template">DeuteronPaginationBundle:Render:pagination.html.twig</parameter>
    </parameters>

    <services>
         <service id="pagination.twig.extension" class="%pagination.twig.extension.class%">
            <argument type="service" id="twig" />
            <argument type="string">%pagination.twig.extension.template%</argument>
            <tag name="twig.extension" />
        </service>
    </services>
</container>
