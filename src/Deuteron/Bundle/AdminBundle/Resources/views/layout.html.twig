<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />

        <title>{% block title %}ADministration{% endblock %}</title>

        <meta name="author" content="Maxime AILLOUD">
        <meta name="description" content="Symfony Edition by maxime AILLOUD">

        <link rel="stylesheet" href="{{ asset('bundles/deuteronproject/css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/deuteronadmin/css/style.css') }}" />
        {% block stylesheets %}{% endblock %}

        <!-- Le fav and touch icons -->
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body>

        <!--
        ======================= Topbar ===========================
        -->
        <header id="mainMenu" class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="{{ path('index') }}" title="Retour Ã  l'accueil">My Symfony Edition</a>

                    {{ knp_menu_render('main', {'currentClass': 'active'}) }}

                    <ul class="nav pull-right">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li><a href="{{ path('fos_user_profile_show') }}" title="Voir son profil">{{ app.user.username }}</a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
                    {% else %}
                        <li><a href="{{ path('fos_user_security_login') }}" title="Se connecter">Connexion</a></li>
                    {% endif %}
                    </ul>
                </div>
            </div>
        </header>
        <!--
        ======================= Topbar ===========================
        -->

        <!--
        ======================= Container ===========================
        -->
        <section>

            {% block content %}
            {% endblock %}

        </section>
        <!--
        ======================= Container ===========================
        -->

        {% block javascripts %}{% endblock %}

    </body>
</html>